pipeline {
    agent {
        kubernetes {
            context "${minikubeContext()}"
            namespace 'default'
        }
    }
    stages {
        stage('Build') {
            steps {
                git url: 'https://github.com/hariingit/kubernetes-ci-cd', branch: 'main'                    
                sh 'docker build -t my-nginx .'
            }
        }
        stage('Deploy to Kubernetes') {
            steps {
                kubernetesDeployments(
                    configs: 'deployment.yaml',
                    enableConfigSubstitution: true,
                    strategy: 'Recreate',
                    prune: true,
                    wait: true,
                    timeout: 5
                )
            }
        }
    }
}

def minikubeContext() {
    def context = sh(returnStdout: true, script: 'minikube kubectl config current-context')
    return context.trim()
}
