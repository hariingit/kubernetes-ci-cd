pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                git {
                    url 'https://github.com/hariingit/kubernetes-ci-cd.git'
                    branch 'main'
                }
                sh 'docker build -t my-app .'
            }
        }
        stage('Deploy') {
            steps {
                sh 'kubectl apply -f deployment.yml'
            }
        }
    }
    post {
        failure {
            echo 'Pipeline failed. Please check the repository and branch configuration.'
        }
    }
}
