pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                git url: 'https://github.com/hariingit/kubernetes-ci-cd', branch: 'main'
                sh 'docker build -t my-nginx ./docker/Dockerfile'
            }
        }
        stage('Deploy to Kubernetes') {
            steps {
                kubernetesDeploy(
                    kubeconfigId: 'your-kubeconfig-id',
                    configs: 'deployment.yaml',
                    enableConfigSubstitution: true
                )
            }
        }
    }
}
