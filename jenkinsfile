pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                git 'https://github.com/hariingit/kubernetes-ci-cd.git'
                sh 'docker build -t my-app .'
            }
        }
       
stage('Deploy') {
    steps {
        sh 'kubectl apply -f deployment.yml'
    }
}
}
}
