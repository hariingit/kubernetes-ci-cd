pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git url: 'https://github.com/hariingit/kubernetes-ci-cd.git',
                credentialsId: 'Finaceplusid1',
                branch: 'main'
            }
        }
        stage('Install Dependencies') {
            steps {
                nodejs(nodeJSInstallationName: 'node-22.8.0') {
                    sh 'npm install'
                }
            }
        }
        stage('Run Tests') {
            steps {
                nodejs(nodeJSInstallationName: 'node-22.8.0') {
                    sh 'npm test'
                }
            }
        }
        stage('Build') {
            steps {
                nodejs(nodeJSInstallationName: 'node-22.8.0') {
                    sh 'npm run build'
                }
            }
        }
        stage('Deploy') {
            steps {
                nodejs(nodeJSInstallationName: 'node-22.8.0') {
                    sh 'node app.js &'
                }
            }
        }
    }

}
