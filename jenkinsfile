pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                git url: 'https://github.com/hariingit/kubernetes-ci-cd.git'
                sh 'docker build -t my-nginx .'
            }
        }
        stage('Deploy') {
            steps {
                sh 'kubectl apply -f deployment.yml'
            }
        }
    }
}
