pipeline {
    agent any
    stages {
        stage('Checkout Source') {
            steps {
                git url: 'https://github.com/hariingit/kubernetes-ci-cd', branch: 'main'
            }
        }
        stage('Build') {
            steps {
                sh 'docker build -t my-nginx .'
            }
        }
        stage('Deploy to Kubernetes') {
            steps {
                  kubernetesApply(configs: "deploymentservice.yml", file: "/etc/kubernetes/config")

                    sh 'kubectl apply -f deployment.yaml'
            }
        }
    }
}
