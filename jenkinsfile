pipeline {
    agent {
        kubernetes {
        }
    }
    stages {
        stage('Build') {
            steps {
                git url: 'https://github.com/hariingit/kubernetes-ci-cd', branch: 'main'                    
                sh 'docker build -t my-nginx .'
            }
        }
        stage('Deploy to Kubernetes') {
            steps {
                kubernetesDeployments(
                    configs: 'deployment.yaml',
                    enableConfigSubstitution: true
                )
            }
        }
    }
}
