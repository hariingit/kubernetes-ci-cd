pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                git 'https://github.com/hariingit/kubernetes-ci-cd'
                sh 'docker build -t my-nginx .'
            }
        }
        stage('Deploy to Kubernetes') {
            steps {
                kubernetesDeploy(
                    kubeconfigId: 'your-kubeconfig-id',
                    configs: 'deployment.yaml',
                    enableConfigSubstitution: true
                )
            }
        }
    }
}
